<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer shadow for depth and lift -->
    <item>
        <shape android:shape="oval">
            <size android:width="120dp" android:height="120dp" />
            <solid android:color="#7F0000" /> <!-- Dark red shadow -->
            <corners android:radius="60dp" />
        </shape>
    </item>

    <!-- Main base layer: A dark base for depth -->
    <item android:top="5dp" android:left="5dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#B22222"
            android:endColor="#8B0000"
            android:angle="270"
            android:type="linear" />
            <size android:width="110dp" android:height="110dp" />
            <corners android:radius="55dp" />
            <stroke
                android:width="4dp"
                android:color="#800000" /> <!-- Deep red stroke for edge -->
        </shape>
    </item>

    <!-- Mid layer: Glossy gradient effect for polish -->
    <item android:top="10dp" android:left="10dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FF6347"
            android:endColor="#FF0000"
            android:angle="270"
            android:type="linear" />
            <size android:width="90dp" android:height="90dp" />
            <corners android:radius="45dp" />
        </shape>
    </item>

    <!-- Highlight layer for top light reflection -->
    <item android:top="12dp" android:left="12dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270"
                android:type="linear" />
            <size android:width="86dp" android:height="43dp" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- Inner glow effect for added 3D depth -->
    <item android:top="18dp" android:left="18dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FF5E5E"
            android:endColor="#00FFFFFF"
            android:angle="90"
            android:type="radial"
            android:gradientRadius="50%" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>

    <!-- Subtle surface texture (replace 'texture' with your drawable) -->
    <item android:top="8dp" android:left="8dp">
        <shape android:shape="oval">
            <size android:width="90dp" android:height="90dp" />
            <corners android:radius="45dp" />
        </shape>
    </item>

    <!-- Bottom shadow for realistic depth -->
    <item android:top="18dp" android:left="18dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#800000"
                android:endColor="#00FFFFFF"
                android:angle="90"
                android:type="linear" />
            <size android:width="85dp" android:height="85dp" />
        </shape>
    </item>

</layer-list>
